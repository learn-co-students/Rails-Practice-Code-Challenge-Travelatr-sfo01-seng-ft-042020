<%= form_for @blogger do |f| %>
    <%= f.label "Name" %><br>
    <%= f.text_field :name %><br>
    <%= f.label "Bio" %><br>
    <%= f.text_area :bio %><br>
    <%= f.label "Age" %><br>
    <%= f.text_field :age %><br>
    <%= f.submit %>
<% end %> 

<% if @blogger.errors.any? %>
<div id="error_explanation">
    <ul>
    <% @blogger.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>